import "./iter-div.fil";

extern "iter-div.sv" {
  comp IterDiv[#W]<G: #W+1>(
      clk: 1,
      reset: 1,
      @interface[G] go: 1,
      @[G, G+1] left: #W,
      @[G, G+#W+1] right: #W,
  ) -> (
      @[G+#W+1, G+#W+2] out_remainder: #W,
      @[G+#W+1, G+#W+2] out_quotient: #W,
      @[G+#W+1, G+#W+2] done: 1
  ) where #W > 0;
}

comp DiffTest[#W, #L]<G: #W+1>(
  @interface[G] go: 1,
  @[G, G+1] left: #W,
  @[G, G+#W+1] right: #W,
) -> (
  @[G, G+1] comb_noshare: #W,
  @[G+#W+1, G+#W+2] verilog: #W,
  @[G+#W, G+#W+1] share: #W,
  @[G+#W, G+#W+1] pipe: #W,
) where #W > 0, #W = #L + 1 {
  d := new IterDiv[#W]<G>(left, right);
  id := new CombNoShareIterDiv[#W, #L]<G>(left, right);
  s := new ShareIterDiv[#W, #L]<G>(left, right);
  pipe := new PipeIterDiv[#W, #L]<G>(left, right);
  verilog = d.out_quotient;
  comb_noshare = id.quotient;
  share = s.quotient;
  pipe = pipe.quotient;
}

comp main<G: 11>(
  @interface[G] go: 1,
  @[G, G+1] left: 8,
  @[G, G+9] right: 8,
) -> (
  @[G, G+1] comb_noshare: 8,
  @[G+9, G+10] verilog: 8,
  @[G+8, G+9] share: 8,
  @[G+8, G+9] pipe: 8,
) {
  d := new DiffTest[8, 7]<G>(left, right);
  verilog = d.verilog;
  comb_noshare = d.comb_noshare;
  share = d.share;
  pipe = d.pipe;
}