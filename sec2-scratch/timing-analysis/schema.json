{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Timing Report",
  "type": "object",
  "required": [
    "design_info",
    "timing_summary",
    "clocks",
    "critical_paths"
  ],
  "properties": {
    "design_info": {
      "type": "object",
      "required": [
        "name",
        "device",
        "tool_version",
        "date",
        "state"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "device": {
          "type": "string"
        },
        "speed_grade": {
          "type": "string"
        },
        "tool_version": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "state": {
          "type": "string"
        }
      }
    },
    "timing_summary": {
      "type": "object",
      "required": [
        "setup",
        "hold",
        "pulse_width"
      ],
      "properties": {
        "setup": {
          "type": "object",
          "required": [
            "wns",
            "tns",
            "failing_endpoints",
            "total_endpoints"
          ],
          "properties": {
            "wns": {
              "type": "number"
            },
            "tns": {
              "type": "number"
            },
            "failing_endpoints": {
              "type": "integer"
            },
            "total_endpoints": {
              "type": "integer"
            }
          }
        },
        "hold": {
          "type": "object",
          "required": [
            "wns",
            "tns",
            "failing_endpoints",
            "total_endpoints"
          ],
          "properties": {
            "wns": {
              "type": "number"
            },
            "tns": {
              "type": "number"
            },
            "failing_endpoints": {
              "type": "integer"
            },
            "total_endpoints": {
              "type": "integer"
            }
          }
        },
        "pulse_width": {
          "type": "object",
          "required": [
            "wns",
            "tns",
            "failing_endpoints",
            "total_endpoints"
          ],
          "properties": {
            "wns": {
              "type": "number"
            },
            "tns": {
              "type": "number"
            },
            "failing_endpoints": {
              "type": "integer"
            },
            "total_endpoints": {
              "type": "integer"
            }
          }
        }
      }
    },
    "clocks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "period",
          "waveform"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "period": {
            "type": "number"
          },
          "waveform": {
            "type": "array",
            "items": {
              "type": "number"
            }
          },
          "frequency_mhz": {
            "type": "number"
          }
        }
      }
    },
    "critical_paths": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path_id",
          "path_type",
          "path_group",
          "slack",
          "status",
          "source",
          "destination",
          "timing_requirement",
          "data_path_delay",
          "delay_breakdown",
          "logic_levels",
          "data_path",
          "required_time_calculation",
          "required_time",
          "arrival_time"
        ],
        "properties": {
          "path_id": {
            "type": "integer"
          },
          "path_type": {
            "type": "string",
            "enum": [
              "setup",
              "hold",
              "pulse_width"
            ]
          },
          "path_group": {
            "type": "string"
          },
          "slack": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": [
              "VIOLATED",
              "MET"
            ]
          },
          "source": {
            "type": "object",
            "required": [
              "name",
              "type",
              "clock"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "clock": {
                "type": "string"
              }
            }
          },
          "destination": {
            "type": "object",
            "required": [
              "name",
              "type",
              "cell_type",
              "clock"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string"
              },
              "cell_type": {
                "type": "string"
              },
              "clock": {
                "type": "string"
              }
            }
          },
          "timing_requirement": {
            "type": "number"
          },
          "data_path_delay": {
            "type": "number"
          },
          "delay_breakdown": {
            "type": "object",
            "required": [
              "logic_delay",
              "logic_delay_percentage",
              "route_delay",
              "route_delay_percentage"
            ],
            "properties": {
              "logic_delay": {
                "type": "number"
              },
              "logic_delay_percentage": {
                "type": "number"
              },
              "route_delay": {
                "type": "number"
              },
              "route_delay_percentage": {
                "type": "number"
              }
            }
          },
          "logic_levels": {
            "type": "object",
            "required": [
              "total",
              "breakdown"
            ],
            "properties": {
              "total": {
                "type": "integer"
              },
              "breakdown": {
                "type": "object"
              }
            }
          },
          "input_delay": {
            "type": "number"
          },
          "clock_path_skew": {
            "type": "number"
          },
          "clock_uncertainty": {
            "type": "number"
          },
          "data_path": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "step_type"
              ],
              "properties": {
                "step_type": {
                  "type": "string",
                  "enum": [
                    "clock_edge",
                    "input_delay",
                    "cell",
                    "net",
                    "endpoint"
                  ]
                },
                "location": {
                  "type": "string"
                },
                "component_type": {
                  "type": "string"
                },
                "component_detail": {
                  "type": "string"
                },
                "resource": {
                  "type": "string"
                },
                "incremental_delay": {
                  "type": "number"
                },
                "logic_delay": {
                  "type": "number"
                },
                "routing_delay": {
                  "type": "number"
                },
                "path_delay_before_routing": {
                  "type": "number"
                },
                "path_delay_after_routing": {
                  "type": "number"
                },
                "path_delay": {
                  "type": "number"
                },
                "transition": {
                  "type": "string"
                },
                "net_name": {
                  "type": "string"
                },
                "fan_out": {
                  "type": "integer"
                }
              }
            }
          },
          "required_time_calculation": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "step_type"
              ],
              "properties": {
                "step_type": {
                  "type": "string",
                  "enum": [
                    "clock_edge",
                    "clock_pessimism",
                    "clock_uncertainty",
                    "setup_requirement",
                    "net",
                    "endpoint"
                  ]
                },
                "location": {
                  "type": "string"
                },
                "component_type": {
                  "type": "string"
                },
                "component_detail": {
                  "type": "string"
                },
                "resource": {
                  "type": "string"
                },
                "incremental_delay": {
                  "type": "number"
                },
                "path_delay": {
                  "type": "number"
                },
                "transition": {
                  "type": "string"
                },
                "net_name": {
                  "type": "string"
                },
                "fan_out": {
                  "type": "integer"
                }
              }
            }
          },
          "arrival_time": {
            "type": "number"
          },
          "required_time": {
            "type": "number"
          }
        }
      }
    }
  }
}