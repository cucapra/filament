extern "../common/mult.sv" {
  component Mult<T>(
    clk: 1,
    reset: 1,
    // Explicit interface signal that shows evidence for event "T".
    @interface<T, 2> go_T: 1,
    // ---------
    @[T, T+2] left: 32,
    @[T, T+1] right: 32
  ) -> (
    @[T+2, T+3] out: 32,
  );
}

component main<G>(
  @[G, G+2] left: 32,
  @[G, G+1] right: 32,
) -> (
  @[G+4, G+5] out: 32,
) {
  M := new Mult;

  m0 := M<G>(left, right);
  m1 := M<G+2>(10, m0.out);
  out = m1.out;
}
